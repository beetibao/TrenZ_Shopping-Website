<div class="admin-body">
        <div class="account-section">
            <div class="account-avatar">
                <img src="https://imgtrenz.blob.core.windows.net/blob/avatar.png" alt="Avatar" class="avatar-image">
            </div>
            <nav>
                <div class="menu-items">
                    <ul class = "nav-links">
                        <li><a href="/admin/admin_statusOrder">
                            <i class="fa fa-tasks fa-2xl"> </i>
                            <span class = "link-name">Tình trạng đơn hàng</span>
                        </a></li>
                        <li><a href="/admin/admin_listProduct" class="nav-active">
                            <i class="fa fa-list-alt fa-2xl"> </i>
                            <span class = "link-name">Danh mục sản phẩm</span>
                        </a></li>
                        <li><a href="/admin/admin_listUser">
                            <i class="fa fa-users fa-2xl"> </i>
                            <span class = "link-name">Danh mục khách hàng</span>
                        </a></li>
                    </ul>
                </div>
                <div>
                    <button class="btn-logout">Đăng xuất</button>
                </div>
            </nav>
        </div>
        
        <div class= "border">
            <button class="btn-add">Thêm sản phẩm</button>
        <div class="account-table">
            <br>
            <div class="table-wapper">
                <table class="table-block">
                    <thead>
                        <th class="table-header">Mã sản phẩm</th>
                        <th class="table-header">Sản phẩm</th>
                        <th class="table-header">Loại</th>
                        <th class="table-header">Giá</th>
                        <th class="table-header">Số lượng</th>
                        <th class="table-header">Chi tiết kích thước</th>
                        <th class="table-header">Chỉnh sửa</th>
                    </thead>
                    <tbody>
                        {{#each products}}
                            <tr>
                                <td class="table-content-col">{{this.id}}</td>
                                <td class="table-content-col">{{this.name}}</td>
                                <td class="table-content-col">{{this.category}}</td>
                                <td class="table-content-col">{{this.price}}</td>
                                <td class="table-content-col">{{this.amount}}</td>
                                <td class="table-content-col">{{this.size}}</td>
                                <td class="table-content-col">
                                    <a class= "update-data" href="/admin/admin_statusOrder/edit/{{this.id}}">
                                    <i class="fa-solid fa-pen-to-square fa-xl btn-change"></i>
                                    </a>
                                    <a class= "update-data" href="/admin/admin_statusOrder/del/{{this.id}}">
                                    <i class="fa-solid fa-trash fa-xl btn-del"></i>
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                </table>
            </div>
        </div>
        </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const logoutButton = document.querySelector('.btn-logout');
    if (logoutButton) {
        logoutButton.addEventListener('click', function() {
            window.location.href = '/'; 
        });
    }
});

document.addEventListener("DOMContentLoaded", function() {
    const logoutButton = document.querySelector('.btn-add');
    if (logoutButton) {
        logoutButton.addEventListener('click', function() {
            window.location.href = '/admin/createProduct'; 
        });
    }
});
</script>