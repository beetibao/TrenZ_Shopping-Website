<div class="main-body">
        <aside class="account-section">
            <div class="account-avatar">
                <img src="/img/rose.png" alt="Avatar" class="avatar-image">
            </div>
            <div class="account-details">
                <div class="menu-items">
                    <h2 class="active"><i class="fas fa-user-circle"></i> Tài Khoản của tôi</h2>
                    <h2><i class="fas fa-clipboard-list"></i> Lịch sử đơn hàng</h2>
                    <h2 class="active2"><i class="fas fa-lock"></i> Đổi mật khẩu</h2>
                </div>
                <br>
                <br>
                <div class="account-actions">
                    <button class="btn logout" id="logoutButton">Đăng xuất</button>
                </div>
            </div>
        </aside> 


  <div class="change-password-container">
    <h1>Đổi Mật Khẩu</h1>
    {{#if status.success}}
      <div class="alert alert-success">{{status.success}}</div>
    {{/if}}
    {{#if status.error}}
      <div class="alert alert-danger">{{status.error}}</div>
    {{/if}}
    <form action="/changePassword" method="post">
      <!-- Các trường form -->

      <div class="form-group">
        <label for="username">Tên đăng nhập:</label>
        <input type="text" id="username" name="username" required>
      </div>

      <div class="form-group">
        <label for="oldPassword">Mật khẩu cũ:</label>
        <input type="password" id="oldPassword" name="oldPassword" required>
      </div>
      
      <div class="form-group">
        <label for="newPassword">Mật khẩu mới:</label>
        <input type="password" id="newPassword" name="newPassword" required>
      </div>
      <div class="form-group">
        <label for="confirmPassword">Xác nhận mật khẩu mới:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required>
      </div>
      
      <button type="submit">Lưu</button>
    </form>
    </div>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const changePasswordForm = document.querySelector('form');

    changePasswordForm.addEventListener('submit', function(event) {
        const oldPassword = document.getElementById('oldPassword').value;
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        console.log('Old Password:', oldPassword);
        console.log('New Password:', newPassword);
        console.log('Confirm New Password:', confirmPassword);
        if (newPassword !== confirmPassword) {
            alert('Mật khẩu mới và xác nhận mật khẩu không khớp.');
            event.preventDefault();
            return;
        }
    });
     const logoutButton = document.getElementById('logoutButton');
    logoutButton.addEventListener('click', function(event) {
        const userConfirmed = confirm('Bạn có chắc chắn muốn đăng xuất không?');
        if (userConfirmed) {
            window.location.href = 'sign.html'; // Chuyển hướng nếu người dùng xác nhận
        } else {
            event.preventDefault(); 
        }
    });
});

</script>
