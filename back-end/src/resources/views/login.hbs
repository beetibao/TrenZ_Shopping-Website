                </div>
            </div>
            <!-- </div> -->
        </div>
    </div>
</div>

<script>
    const pass = document.querySelector('#controlPass');
    const password = document.querySelector('#password');
    pass.addEventListener('click', function (e) {
        // Check that the class of id ControlPas contain showpass or not
        if (this.classList.contains('showpass')) {
            this.classList.remove('showpass');
            this.classList.add('hidded');
        } else {
            this.classList.remove('hidded');
            this.classList.add('showpass');
        }
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
    });
