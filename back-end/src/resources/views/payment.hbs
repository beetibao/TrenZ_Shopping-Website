<div id="payment" class="payment-container">
    <h2 class="payment-title">Đơn mua</h2>
    <div class="heading">
        <div class="c0">STT</div>
        <div class="c1">Sản phẩm</div>
        <div class="c2">Đơn giá</div>
        <div class="c3">Số lượng</div>
        <div class="c4">Thành tiền</div>
    </div>
    <div class="list-product">
        {{#each products as |item index|}}
        <div class="product_payment">
            <div class="c0">{{indexAddOne index}}</div>
            <div class="c1">
                <img class="cart_list_item_img" src="{{this.image}}" alt="Áo thun">
                <div class="item-info">
                    <p class="cart_list_item_name item-name">{{this.name}}</p>
                    <p class="item-size">Size: {{this.size}}</p>
                </div>
            </div>
            <div class="c2">{{this.price}}đ</div>
            <div class="c3">{{this.quantity}}</div>
            <div class="c4">{{this.totalprice}}đ</div>
        </div>
        {{/each}}
    </div>
    <h2 class="title">Thông tin thanh toán</h2>
    <div class="payment-info-wrapper">
        <div class="payment-info">
            <div class="info">
                <p>Họ và tên: <span id="customer-name"></span></p>
                <p>Số điện thoại: <span id="customer-phone"></span></p>
                <p>Địa chỉ: <span id="customer-address"></span></p>
            </div>
            <div class="change">
                <button class="btn-change" id="changeBtn">Thay đổi</button>
            </div>
            <div id="changeInfo" class="modal-info">
                <!-- Modal content -->
                <div class="info-content" id="payment-info-form">
                    <h2>Thay đổi thông tin thanh toán</h2>
                    <form>
                        <div class="row">
                            <div class="col-30">
                                <label for="fullName">Họ và tên:</label>
                            </div>
                            <div class="col-70">
                                <input type="text" id="fullName" name="fullName" placeholder="Họ và tên">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-30">
                                <label for="phone">Số điện thoại:</label>
                            </div>
                            <div class="col-70">
                                <input type="tel" id="phone" name="phone" placeholder="Số điện thoại">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-30">
                                <label for="address">Địa chỉ:</label>
                            </div>
                            <div class="col-70">
                                <input type="text" id="address" name="address" placeholder="Địa chỉ">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-30">
                                <label for="email">Email:</label>
                            </div>
                            <div class="col-70">
                                <input type="email" id="email" name="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="row">
                            <input class="closeBtn btn" value="Hủy">                            
                            <input class="saveBtn btn" type="submit" value="Lưu">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <h2 class="title">Vận chuyển</h2>
    <div class="transport_wrap">
        <div class="transport">
            <div class="t1"><span class="trans-comp">Đơn vị vận chuyển: </span></div>
            <div class="t2">
                <div id="trans-comp-name"></div>
                <div class="pred">
                    <span id="trans-expect-delivery"></span>
                </div>
            </div>
            <div class="t3" id="trans-price"></div>
            <div class="t4"><button class="btn-change1" id="changeTransBtn">Thay đổi</button></div>
        </div>
    </div>
    <form id="changeTrans" class="trans-info">
        <!-- Modal content -->
        <div class="trans-content">
            <h2>Thay đổi đơn vị vận chuyển</h2>
            <div class="opt">
                <input type="radio" id="GHN" name="payment_method" value="GHN" checked />
                <label for="GHN" class="label-pos"> Giao hàng nhanh </label>
                <span id="transMoney">50.100đ</span>
                <div class="transTime">(Dự kiến 3-5 ngày)</div>
            </div>
            <div class="opt">
                <input type="radio" id="GHTK" name="payment_method" value="GHTK" />
                <label for="GHTK" class="label-pos"> Giao hàng tiết kiệm </label>
                <span id="transMoney">60.000đ</span>
                <div class="transTime">(Dự kiến 1-2 ngày)</div>
            </div>
            <div class="row">
                <input class="closeTransBtn" type="submit" value="Huỷ">                
                <input class="saveTransBtn" type="submit" value="Lưu">
            </div>
        </div>
    </form>

    {{!-- ORDER CONFIRMED --}}
    <form id="orderConfirmed" class="trans-info">
        <!-- Modal content -->
        <div class="trans-content">
            <h2>Đặt hàng thành công</h2>
            {{!-- <label style="margin: 20px 0"> Đơn hàng đã được đặt thành công. Hãy chú ý điện thoại để nhận hàng </label> --}}
            <div class="row">
                <a href="/" class="btn">OK</a>
            </div>
        </div>
    </form>

