<div class="search_title">
        <h1>Kết quả tìm kiếm của "{{keyword}}"</h1>
</div>
<div class="search_info"></div>
<div class="search_products_grid">    
        {{#each products}}
        <div class="search_product">
            <div class="search_product_items">
                <a href="/product/{{this.id}}">
                    <img class="detail_product" src="{{this.img}}" alt="{{this.name}}">
                </a>
                <a href="/product/{{this.id}}">
                    <p class="description">{{this.name}}</p>
                </a>
                <p class="price">{{this.price}}đ</p>
            </div>
        </div>
        {{/each}}
 </div>


<script>
    const searchInfo = document.querySelector('.search_info');
    const searchProductsGrid = document.querySelectorAll('.search_products_grid');

    length_product = searchProductsGrid[0].childElementCount;
    length_product === 0 ? searchInfo.innerHTML = `<h2>Không tìm thấy sản phẩm nào</h2>` : searchInfo.innerHTML = `<h2>Tìm thấy ${length_product} sản phẩm</h2>`;
</script>
